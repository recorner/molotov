# Environment Configuration for Molotov Bot

# Bot Configuration
BOT_TOKEN=your_bot_token_here
ADMIN_GROUP=your_admin_group_id
ADMIN_IDS=123456789,987654321

# Database Configuration
DB_ENCRYPTION_KEY=your_32_character_encryption_key_here

# Translation Configuration
SUPPORTED_LANGUAGES=es,fr,de,it,pt,ru,zh,ja,ar,hi,ko,tr,pl,nl,sv,da,no,fi,el,cs
# Supported language codes:
# es=Spanish, fr=French, de=German, it=Italian, pt=Portuguese
# ru=Russian, zh=Chinese, ja=Japanese, ar=Arabic, hi=Hindi
# ko=Korean, tr=Turkish, pl=Polish, nl=Dutch, sv=Swedish
# da=Danish, no=Norwegian, fi=Finnish, el=Greek, cs=Czech

# LibreTranslate Service
LIBRETRANSLATE_URL=http://localhost:5000
LIBRETRANSLATE_API_KEY=

# Redis Configuration (for instant translation caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TRANSLATION_TTL=86400

# Performance Settings
TRANSLATION_CACHE_ENABLED=true
INSTANT_RESPONSE_MODE=true
PRELOAD_TRANSLATIONS=true

# Blockchain Configuration
BSC_RPC_URL=https://bsc-dataseed.binance.org/
BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545/
WALLET_PRIVATE_KEY=your_wallet_private_key
PAYMENT_WALLET_ADDRESS=your_payment_wallet_address
BTC_ADDRESS=your_btc_address
LTC_ADDRESS=your_ltc_address

# Auto Settlement Configuration
AUTO_SETTLEMENT_ENABLED=true
AUTO_SETTLEMENT_AMOUNT=100
AUTO_SETTLEMENT_INTERVAL=24

# Profit Analytics
PROFIT_ANALYTICS_ENABLED=true
DAILY_STATS_ENABLED=true
