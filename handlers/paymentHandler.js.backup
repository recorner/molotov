export async function handlePaymentConfirmation(bot, query) {
  const { data, from } = query;

  if (!data.startsWith('confirm_')) return;

  const orderId = parseInt(data.split('_')[1]);

  // Check spam prevention first
  if (!spamPrevention.canPerformAction(from.id, 'confirm')) {
    const remaining = spamPrevention.getTimeRemaining(from.id, 'confirm');
    return bot.answerCallbackQuery(query.id, { 
      text: `‚è±Ô∏è Please wait ${remaining} seconds before trying again`,
      show_alert: true 
    });
  }

  // Check confirmation limits
  const confirmCheck = spamPrevention.canSendConfirmation(from.id, orderId);
  if (!confirmCheck.allowed) {
    let alertText;
    if (confirmCheck.reason === 'cooldown') {
      alertText = `‚è±Ô∏è You can send another confirmation in ${confirmCheck.remainingTime} seconds`;
    } else if (confirmCheck.reason === 'max_reached') {
      alertText = `üö´ Maximum confirmations reached for this order. Please wait for processing or contact support.`;
    }
    
    return bot.answerCallbackQuery(query.id, { 
      text: alertText,
      show_alert: true 
    });
  }

  db.get(`SELECT o.id, o.user_id, o.price, o.currency, o.status, p.name AS product_name 
          FROM orders o
          JOIN products p ON p.id = o.product_id
          WHERE o.id = ? AND o.user_id = ?`, [orderId, from.id], async (err, order) => {
    if (err || !order) {
      return bot.answerCallbackQuery(query.id, { 
        text: '‚ùå Order not found or access denied',
        show_alert: true 
      });
    }

    if (order.status !== 'pending') {
      let statusText;
      if (order.status === 'completed') {
        statusText = '‚úÖ This order is already completed';
      } else if (order.status === 'cancelled') {
        statusText = '‚ùå This order was cancelled';
      } else {
        statusText = `üîÑ Order status: ${order.status}`;
      }
      
      return bot.answerCallbackQuery(query.id, { 
        text: statusText,
        show_alert: true 
      });
    }

    // Check if this is a duplicate confirmation
    if (spamPrevention.isDuplicateConfirmation(from.id, orderId)) {
      // Send reminder instead of new confirmation
      const reminderContent = 
        `üîÑ **Payment Confirmation Reminder**\n\n` +
        `üßæ **Order ID:** #${orderId}\n` +
        `üõçÔ∏è **Product:** ${order.product_name}\n` +
        `üí∞ **Amount:** ${uiOptimizer.formatPrice(order.price)}\n` +
        `‚è∞ **Status:** Processing your previous confirmation\n\n` +
        `üí° **What's happening:**\n` +
        `‚Ä¢ Your payment confirmation is already being processed\n` +
        `‚Ä¢ Automatic verification is in progress\n` +
        `‚Ä¢ You'll be notified once payment is confirmed\n` +
        `‚Ä¢ No additional action needed from you\n\n` +
        `‚ö° **Automatic Process:**\n` +
        `‚Ä¢ Detection: Automatic blockchain monitoring\n` +
        `‚Ä¢ Verification: Instant upon confirmation\n` +
        `‚Ä¢ Delivery: Immediate after verification`;

      const reminderMessage = uiOptimizer.formatMessage(
        'ÔøΩ Confirmation Reminder',
        reminderContent,
        { addSeparator: true, addTimestamp: true }
      );

      await bot.sendMessage(query.message.chat.id, reminderMessage, { 
        parse_mode: 'Markdown',
        reply_markup: {
          inline_keyboard: [
            [{ text: 'üîÑ Check Status', callback_data: `status_${orderId}` }],
            [{ text: 'üí¨ Contact Support', url: 'https://t.me/kopachev4' }]
          ]
        }
      });

      return bot.answerCallbackQuery(query.id, { 
        text: 'üîî Confirmation reminder sent - payment still being processed',
        show_alert: false 
      });
    }

    // Send new payment confirmation
    const confirmationContent = 
      `‚úÖ **Payment Confirmation Submitted**\n\n` +
      `üßæ **Order Details**\n` +
      `‚Ä¢ **Order ID:** #${orderId}\n` +
      `‚Ä¢ **Product:** ${order.product_name}\n` +
      `‚Ä¢ **Amount:** ${uiOptimizer.formatPrice(order.price)}\n` +
      `‚Ä¢ **Currency:** ${order.currency.toUpperCase()}\n` +
      `‚Ä¢ **Time:** ${new Date().toLocaleString()}\n\n` +
      
      `ü§ñ **Automatic Processing**\n` +
      `‚Ä¢ **Blockchain Monitoring:** Active\n` +
      `‚Ä¢ **Detection Time:** 5-15 minutes typically\n` +
      `‚Ä¢ **Verification:** Automatic upon confirmation\n` +
      `‚Ä¢ **Delivery:** Instant after verification\n\n` +
      
      `üí° **What happens next:**\n` +
      `‚Ä¢ System monitors blockchain for your payment\n` +
      `‚Ä¢ You'll receive notification when detected\n` +
      `‚Ä¢ Product delivered automatically\n` +
      `‚Ä¢ Support available 24/7 if needed`;

    const confirmationMessage = uiOptimizer.formatMessage(
      '‚úÖ Confirmation Received',
      confirmationContent,
      { addSeparator: true, addTimestamp: false }
    );

    await bot.sendMessage(query.message.chat.id, confirmationMessage, { 
      parse_mode: 'Markdown',
      reply_markup: {
        inline_keyboard: [
          [
            { text: 'üîÑ Check Status', callback_data: `status_${orderId}` },
            { text: 'üí¨ Support', url: 'https://t.me/kopachev4' }
          ],
          [
            { text: 'üè™ Continue Shopping', callback_data: 'load_categories' }
          ]
        ]
      }
    });

    // Enhanced admin notification with better formatting
    await notifyPaymentReceived(bot, {
      orderId: order.id,
      customer: {
        id: from.id,
        name: from.first_name,
        username: from.username
      },
      product: order.product_name,
      amount: order.price,
      currency: order.currency,
      time: new Date().toLocaleString()
    });

    // Provide user feedback via callback query
    bot.answerCallbackQuery(query.id, { 
      text: '‚úÖ Payment confirmation sent successfully!',
      show_alert: false 
    });
  });
}

export async function handleAdminPaymentAction(bot, query) {
  const { data, from } = query;
  logger.info('ADMIN', `Admin payment action: ${data} by user ${from.id}`);
  
  // Perform diagnostic analysis
  const analysis = adminDiagnostics.analyzeCallback(data, from.id);
  adminDiagnostics.logDiagnostic(analysis);
  
  if (!analysis.isValid) {
    const errorMessage = adminDiagnostics.generateErrorMessage(analysis);
    logger.error('ADMIN', `Invalid admin action: ${data}`, analysis);
    
    // Send detailed diagnostic message to admin
    await bot.sendMessage(from.id, errorMessage, { parse_mode: 'Markdown' });
    
    return bot.answerCallbackQuery(query.id, { 
      text: '‚ùå Invalid action data. Check your PM for diagnostic details.',
      show_alert: true 
    });
  }
  
  const { action, orderId, targetUserId } = analysis;

  db.get(`SELECT o.*, p.name AS product_name 
          FROM orders o
          JOIN products p ON p.id = o.product_id
          WHERE o.id = ?`, [orderId], async (err, order) => {
    if (err || !order) {
      return bot.answerCallbackQuery(query.id, { text: '‚ùå Order not found' });
    }

    if (action === 'confirm') {
      // Update order status
      db.run(`UPDATE orders SET status = 'confirmed' WHERE id = ?`, [orderId]);
      
      // Notify buyer
      await bot.sendMessage(targetUserId, `‚úÖ *Payment Confirmed*\n\nYour payment for order #${orderId} has been confirmed!\nThe product will be delivered shortly.\n\n‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ`);
      
      // Ask admin to provide product details
      const requestMsg = `üì§ *Please Upload Product Details*\n\n` +
        `üßæ Order ID: *#${orderId}*\n` +
        `üõçÔ∏è Product: *${order.product_name}*\n\n` +
        `‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ\n` +
        `Please reply with the product files (max 25MB) or product details as text.`;
      
      await notifyGroup(bot, requestMsg, { parse_mode: 'Markdown' });

      // Update the original confirmation message
      await bot.editMessageText(
        `‚úÖ *Payment Confirmed*\n\nWaiting for product delivery...\n\n` +
        `üßæ Order ID: *#${orderId}*\n` +
        `üõçÔ∏è Product: *${order.product_name}*\n\n` +
        `‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ`,
        {
          chat_id: query.message.chat.id,
          message_id: query.message.message_id,
          parse_mode: 'Markdown'
        }
      );
    } else if (action === 'cancel') {
      // Update order status
      db.run(`UPDATE orders SET status = 'cancelled' WHERE id = ?`, [orderId]);
      
      // Notify buyer
      await bot.sendMessage(targetUserId, `‚ùå *Payment Cancelled*\n\nUnfortunately, your payment for order #${orderId} could not be verified.\nPlease contact support if you believe this is an error.\n\n‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ`);
      
      // Update the original confirmation message
      await bot.editMessageText(
        `‚ùå *Payment Cancelled*\n\n` +
        `üßæ Order ID: *#${orderId}*\n` +
        `üõçÔ∏è Product: *${order.product_name}*\n\n` +
        `‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ`,
        {
          chat_id: query.message.chat.id,
          message_id: query.message.message_id,
          parse_mode: 'Markdown'
        }
      );
    }
    
    await bot.answerCallbackQuery(query.id, { 
      text: action === 'confirm' ? '‚úÖ Payment confirmed' : '‚ùå Payment cancelled'
    });
  });
}

